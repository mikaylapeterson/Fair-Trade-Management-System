<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FairtradeCertificationManagementSystem.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FairtradeCertificationManagementSystem">

    <TabBar>
        <Tab>
            <ShellContent Title="Calendar"
                          ContentTemplate="{DataTemplate local:Calendar}"
                          />

            <ShellContent Title="Admin"
                          ContentTemplate="{DataTemplate local:Admin}"
                          />

            <ShellContent Title="Playing Around"
                          ContentTemplate="{DataTemplate local:MainPage}"
                          IsVisible="True"
                          />
        </Tab>

    </TabBar>

</Shell>

