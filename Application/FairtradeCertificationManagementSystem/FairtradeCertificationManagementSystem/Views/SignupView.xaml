<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FairtradeCertificationManagementSystem.Views.SignupView"
             Title="Signup">
    <VerticalStackLayout VerticalOptions="CenterAndExpand" Padding="25,0">
        <VerticalStackLayout>
            <Label Text="Username"/>
            <Entry Placeholder="Enter username"/>

            <Label Text="Password"/>
            <Entry Placeholder="Enter password"/>

            <Label Text="Confirm Password"/>
            <Entry Placeholder="Renter password"/>

            <Label Text="Producer Network Location"/>
            <Picker/>

            <Label Text="Product"/>
            <Picker/>

            <HorizontalStackLayout>
                <Button x:Name="Signup_Button"/>
                <Button x:Name="Login_Button" Clicked="Login_Button_Clicked"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>
