<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FairtradeCertificationManagementSystem.Views.LoginView"
             Title="LoginView">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <HorizontalStackLayout>
                <Label Text="Username"/>
                <Entry Placeholder="Username" IsPassword="False"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <Label Text="Password"/>
                <Entry Placeholder="Password" IsPassword="True"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>

    </ScrollView>
</ContentPage>
