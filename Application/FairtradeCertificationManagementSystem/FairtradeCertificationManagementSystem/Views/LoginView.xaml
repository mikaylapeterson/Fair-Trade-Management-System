<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FairtradeCertificationManagementSystem.Views.LoginView"
             Title="LoginView">
    <VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Username"/>
            <StackLayout>
                <Entry Placeholder="Enter username"/>
            </StackLayout>
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Password"/>
            <StackLayout>
                <Entry Placeholder="Enter username"/>
            </StackLayout>
        </VerticalStackLayout>
        <Button Text="Login"/>
        <Button Text="Register"/>
    </VerticalStackLayout>
</ContentPage>
